<div class="brand">Fishing Tournament System</div>
<div class="address-bar">Charleston, SC</div>

<%= render 'layouts/navigation' %>

<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center"><strong><%= @tournament.Name%></strong></h2>
                <hr>
            </div>
            <div class="col-md-6">
                <img class="img-responsive img-border-left" src="/assets/tournament1.jpg" alt="">
            </div>
            <div class="col-md-6">
                <p><strong>Start Date: </strong><%= @tournament.StartDt %></p>
                <p><strong>Entry Fee: </strong><%= @tournament.EntryFee %></p>
                <p><strong>Captain's Meeting: </strong><%= @tournament.CaptainsMeetingLoc %> <%= @tournament.CaptainsMeetingDt %></p>
                <p><strong>Description: </strong><%= @tournament.Description %></p>
            </div>
            <div class="col-md-6">
                <%= link_to 'Register', signup_index_path(:tid => @tid, :aid => @aid), class: "btn btn-default" %>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- /.container -->
