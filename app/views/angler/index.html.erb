<div class="brand">Fishing Tournament System</div>
<div class="address-bar">Charleston, SC</div>

<%= render 'layouts/navigation' %>

<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">Welcome <strong><%= @anglerFName %> <%= @anglerLName %></strong></h2>
                <hr>
            </div>
            <div class="col-md-6">
                <img class="img-responsive img-border-left" src="/assets/PhilAndTheShark.JPG" alt="">
            </div>
            <div class="col-md-6">
                <p>Email Address: <strong><%= @anglerEmail %></strong></p>
                <p>Upcoming Tournaments:</p>
                <table>
                    <tr>
                        <th>Register</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Cost</th>
                        <th>Captains Meeting</th>
                    </tr>
                    <% @tournaments.each do |tournament| %>
                        <tr>
                            <td><%= link_to 'Register', page_path('register') %></td>
                            <td><%= tournament.Name %></td>
                            <td><%= tournament.StartDt %></td>
                            <td><%= tournament.EntryFee %></td>
                            <td><%= tournament.CaptainsMeetingLoc %></td>
                            <td><%= tournament.CaptainsMeetingDt %></td>
                        </tr>
                    <% end %>
                </table>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- /.container -->
