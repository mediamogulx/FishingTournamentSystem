<div class="brand">Fishing Tournament System</div>
<div class="address-bar">Charleston, SC</div>

<%= render 'layouts/navigation' %>

<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Sign up</strong>
                </h2>
                <hr>
            </div>
            <div class="col-md-6">
                <img class="img-responsive img-border-left" src="/assets/fish4.jpg" alt="">
            </div>
            <div class="col-md-6">
                <form role="form">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Name on the Card</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Card Number</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-3">
                            <label>Expiration</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group col-lg-2">
                            <label>CVV</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <%= link_to 'Submit', new_signup_path(:tid => @tournamentID, :aid => @anglerID), class: "btn btn-default" %>
                        </div>
                    </div>
                </form>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- /.container -->
